<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Cho phép cleartext traffic cho localhost (Android Emulator và thiết bị thật) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Thêm IP máy tính của bạn nếu dùng điện thoại thật trên cùng WiFi -->
        <!-- <domain includeSubdomains="true">192.168.1.5</domain> -->
    </domain-config>
    
    <!-- Cho production, chỉ cho phép HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

