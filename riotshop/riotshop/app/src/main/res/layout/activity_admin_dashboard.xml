<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/riot_black_dark"
    android:padding="16dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/riot_black_dark"
        app:title="Admin Dashboard"
        app:titleTextColor="@color/riot_gold_accent" />

    <!-- Welcome Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào mừng Admin!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/riot_gold_accent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp" />

    <!-- Admin Functions Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_admin_functions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Xuất"
        android:textColor="@color/riot_text_light"
        android:backgroundTint="@color/riot_red_primary"
        android:layout_marginTop="20dp"
        android:padding="12dp" />

</LinearLayout>