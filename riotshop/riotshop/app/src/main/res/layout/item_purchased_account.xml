<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/riot_black_light"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Info -->
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/riot_gold_accent"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Nick Full Tướng" />

        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/riot_text_hint"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            tools:text="League of Legends" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/riot_text_hint"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:alpha="0.3" />

        <!-- Account Credentials -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin tài khoản:"
            android:textColor="@color/riot_gold_accent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên đăng nhập:"
                android:textColor="@color/riot_text_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/riot_text_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                tools:text="lol_account_001" />

            <Button
                android:id="@+id/btn_copy_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sao chép"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:backgroundTint="@color/riot_gold_accent"
                android:textColor="@color/riot_black_dark" />
        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mật khẩu:"
                android:textColor="@color/riot_text_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/riot_text_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                tools:text="••••••••" />

            <Button
                android:id="@+id/btn_copy_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sao chép"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:backgroundTint="@color/riot_gold_accent"
                android:textColor="@color/riot_black_dark" />
        </LinearLayout>

        <!-- Riot ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Riot ID:"
                android:textColor="@color/riot_text_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_riot_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/riot_text_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                tools:text="Player1#VN1" />

            <Button
                android:id="@+id/btn_copy_riot_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sao chép"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:backgroundTint="@color/riot_gold_accent"
                android:textColor="@color/riot_black_dark" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/riot_text_hint"
            android:alpha="0.3"
            android:layout_marginBottom="8dp" />

        <!-- Order Info -->
        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/riot_text_hint"
            android:textSize="12sp"
            tools:text="Ngày mua: 01/01/2024 10:30" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/riot_red_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            tools:text="Giá: 100.000 VNĐ" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

