<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/riot_black_dark"
    tools:context=".ui.home.HomeFragment">

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tìm kiếm sản phẩm..."
            android:background="@drawable/bg_rounded_search"
            android:padding="12dp"
            android:textColor="@color/riot_text_light"
            android:textColorHint="@color/riot_text_hint"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp" />

        <ImageButton
            android:id="@+id/btn_filter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_menu_gold"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Filter" />
    </LinearLayout>

    <!-- Categories Horizontal RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        tools:listitem="@layout/item_category" />

    <!-- Products Grid RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_products_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        tools:listitem="@layout/item_product" />

</LinearLayout>
