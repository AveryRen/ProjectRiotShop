<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/riot_black_dark">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_order_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/riot_black_light"
            app:titleTextColor="@color/riot_gold_accent" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/riot_gold_accent"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Đơn hàng #12345" />

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/riot_red_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Đang xử lý" />

            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/riot_text_light"
                android:textSize="14sp"
                tools:text="Ngày đặt: 01/01/2024" />

            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/riot_text_light"
                android:textSize="14sp"
                tools:text="Phương thức thanh toán: COD" />

            <TextView
                android:id="@+id/tv_order_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/riot_gold_accent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Tổng tiền: 1.500.000 VNĐ" />

            <!-- Account Information Section (only for completed orders) -->
            <LinearLayout
                android:id="@+id/ll_account_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/riot_text_hint"
                    android:alpha="0.3"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin tài khoản đã mua:"
                    android:textColor="@color/riot_gold_accent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/riot_text_light"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    tools:text="Nick Full Tướng 100 Skins" />

                <TextView
                    android:id="@+id/tv_game_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/riot_text_hint"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"
                    tools:text="League of Legends" />

                <!-- Username -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tên đăng nhập:"
                        android:textColor="@color/riot_text_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_account_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/riot_text_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        tools:text="lol_account_001" />

                    <Button
                        android:id="@+id/btn_copy_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sao chép"
                        android:textSize="12sp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:backgroundTint="@color/riot_gold_accent"
                        android:textColor="@color/riot_black_dark" />
                </LinearLayout>

                <!-- Password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mật khẩu:"
                        android:textColor="@color/riot_text_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_account_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/riot_text_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        tools:text="••••••••" />

                    <Button
                        android:id="@+id/btn_copy_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sao chép"
                        android:textSize="12sp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:backgroundTint="@color/riot_gold_accent"
                        android:textColor="@color/riot_black_dark" />
                </LinearLayout>

                <!-- Riot ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Riot ID:"
                        android:textColor="@color/riot_text_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_account_riot_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/riot_text_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        tools:text="Player1#VN1" />

                    <Button
                        android:id="@+id/btn_copy_riot_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sao chép"
                        android:textSize="12sp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:backgroundTint="@color/riot_gold_accent"
                        android:textColor="@color/riot_black_dark" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_cancel_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Hủy đơn hàng"
                android:backgroundTint="@color/riot_red_primary"
                android:textColor="@color/riot_text_light"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

