<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_admin_function_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_menu_gold"
        android:background="@drawable/bg_category_red"
        android:padding="16dp"
        android:contentDescription="Function Icon"
        tools:src="@drawable/ic_menu_gold" />

    <TextView
        android:id="@+id/tv_admin_function_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Quản Lý"
        android:textColor="@color/riot_text_light"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>

