<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/riot_background_dark"
    tools:context=".ui.profile.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/riot_background_light"
                app:title="Chỉnh sửa thông tin"
                app:titleTextColor="@color/riot_gold" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <EditText
                    android:id="@+id/et_email"
                    style="@style/RiotEditTextStyle"
                    android:hint="Email"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/et_full_name"
                    style="@style/RiotEditTextStyle"
                    android:hint="Họ và tên"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/RiotEditTextStyle"
                    android:hint="Số điện thoại"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/et_address"
                    style="@style/RiotEditTextStyle"
                    android:hint="Địa chỉ"
                    android:inputType="textPostalAddress" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="16dp"/>

                <Button
                    android:id="@+id/btn_save_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_riot"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Lưu thay đổi"
                    android:textColor="@color/riot_background_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Snow Effect Overlay -->
    <com.example.riotshop.ui.SnowView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>