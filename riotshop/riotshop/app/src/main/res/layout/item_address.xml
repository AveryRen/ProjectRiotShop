<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/riot_black_light"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_address_full_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/riot_gold_accent"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Nguyễn Văn A" />

            <TextView
                android:id="@+id/tv_address_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mặc định"
                android:textColor="@color/riot_red_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_category_selected"
                android:padding="4dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/riot_text_light"
            android:textSize="14sp"
            tools:text="0901234567" />

        <TextView
            android:id="@+id/tv_address_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/riot_text_light"
            android:textSize="14sp"
            tools:text="123 Đường ABC, Phường XYZ, Quận 1, TP.HCM" />

    </LinearLayout>

</androidx.cardview.widget.CardView>