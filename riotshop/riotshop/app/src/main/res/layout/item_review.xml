<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/riot_black_light"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_review_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/riot_gold_accent"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Username" />

            <TextView
                android:id="@+id/tv_review_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/riot_text_hint"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                tools:text="01/01/2024" />

            <ImageButton
                android:id="@+id/btn_edit_review"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Sửa đánh giá"
                android:visibility="gone"
                android:layout_marginEnd="4dp"
                android:tint="@color/riot_gold_accent"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btn_delete_review"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Xóa đánh giá"
                android:visibility="gone"
                android:tint="@color/error"
                android:padding="8dp" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/rating_bar_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:numStars="5"
            android:rating="5"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            style="?android:attr/ratingBarStyleSmall" />

        <TextView
            android:id="@+id/tv_review_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/riot_text_light"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            tools:text="Đánh giá rất tốt, sản phẩm chất lượng cao!" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

