<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/riot_background_dark"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- User Info Section -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_profile_default"
                app:civ_border_color="@color/riot_gold"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Tên Người Dùng"
                android:textColor="@color/riot_text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="email@example.com"
                android:textColor="@color/riot_text_hint"
                android:textSize="16sp" />

            <!-- Balance Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/profile_item_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số dư tài khoản"
                    android:textColor="@color/riot_text_hint"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200.000 VNĐ"
                    android:textColor="@color/riot_gold"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Menu Section -->
            <TextView
                style="@style/RiotMenuItem"
                android:id="@+id/btn_edit_profile"
                android:text="Chỉnh sửa thông tin" />

            <TextView
                style="@style/RiotMenuItem"
                android:id="@+id/btn_order_history"
                android:text="Lịch sử đơn hàng" />

            <TextView
                style="@style/RiotMenuItem"
                android:id="@+id/btn_purchased_accounts"
                android:text="Tài khoản đã mua" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_riot"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Đăng Xuất"
                android:textColor="@color/riot_background_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <!-- Snow Effect Overlay -->
    <com.example.riotshop.ui.SnowView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>