<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/riot_black_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textColor="@color/riot_gold_accent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập:"
            android:textColor="@color/riot_text_hint"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/riot_text_light"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:text="username" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="@color/riot_text_hint"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/riot_text_light"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:text="email@example.com" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ và tên:"
            android:textColor="@color/riot_text_hint"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/riot_text_light"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:text="Nguyễn Văn A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:"
            android:textColor="@color/riot_text_hint"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/riot_text_light"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:text="0901234567" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số dư:"
            android:textColor="@color/riot_text_hint"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/riot_gold_accent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            tools:text="1.000.000 VNĐ" />

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa thông tin"
            android:backgroundTint="@color/riot_gold_accent"
            android:textColor="@color/riot_black_dark"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_purchased_accounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản đã mua"
            android:backgroundTint="@color/riot_black_light"
            android:textColor="@color/riot_gold_accent"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
