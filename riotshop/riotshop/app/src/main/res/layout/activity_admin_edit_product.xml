<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/riot_black_dark"
    android:padding="16dp">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/riot_black_light"
            app:titleTextColor="@color/riot_gold_accent" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:background="@color/riot_black_light"
                android:scaleType="centerCrop"
                android:contentDescription="Product Image" />

            <Button
                android:id="@+id/btn_upload_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Upload Ảnh" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Chọn Game"
                app:boxBackgroundColor="@color/riot_gold_accent"
                app:hintTextColor="@color/riot_black_dark"
                app:boxStrokeColor="@color/riot_black_dark">

                <Spinner
                    android:id="@+id/spinner_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/riot_gold_accent"
                    android:textColor="@color/riot_black_dark" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Tiêu đề *"
                app:boxBackgroundColor="@color/input_background"
                app:hintTextColor="@color/riot_gold_accent"
                app:boxStrokeColor="@color/riot_gold_accent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/input_text"
                    android:textColorHint="@color/input_text_hint" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Mô tả"
                app:boxBackgroundColor="@color/input_background"
                app:hintTextColor="@color/riot_gold_accent"
                app:boxStrokeColor="@color/riot_gold_accent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="5"
                    android:textColor="@color/input_text"
                    android:textColorHint="@color/input_text_hint" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Giá cơ bản *"
                app:boxBackgroundColor="@color/input_background"
                app:hintTextColor="@color/riot_gold_accent"
                app:boxStrokeColor="@color/riot_gold_accent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_base_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/input_text"
                    android:textColorHint="@color/input_text_hint" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Tag Rank"
                app:boxBackgroundColor="@color/input_background"
                app:hintTextColor="@color/riot_gold_accent"
                app:boxStrokeColor="@color/riot_gold_accent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_tag_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/input_text"
                    android:textColorHint="@color/input_text_hint" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Tag Skins"
                app:boxBackgroundColor="@color/input_background"
                app:hintTextColor="@color/riot_gold_accent"
                app:boxStrokeColor="@color/riot_gold_accent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_tag_skins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/input_text"
                    android:textColorHint="@color/input_text_hint" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Tag Collection"
                app:boxBackgroundColor="@color/input_background"
                app:hintTextColor="@color/riot_gold_accent"
                app:boxStrokeColor="@color/riot_gold_accent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_tag_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/input_text"
                    android:textColorHint="@color/input_text_hint" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cb_is_featured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Sản phẩm nổi bật"
                android:textColor="@color/riot_text_light" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Cập nhật"
                android:backgroundTint="@color/riot_gold_accent" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xóa sản phẩm"
                android:backgroundTint="@android:color/holo_red_dark" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
