<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/riot_background_dark"
    tools:context=".ui.favorite.FavoriteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_favorite"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/riot_background_light"
                app:title="Sản phẩm Yêu thích"
                app:titleTextColor="@color/riot_gold" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favorite_products"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Snow Effect Overlay -->
    <com.example.riotshop.ui.SnowView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>