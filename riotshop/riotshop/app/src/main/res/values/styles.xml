<resources>
    <style name="FunctionButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="FunctionButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/riot_text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Theme.Riotshop.NoActionBar" parent="Theme.Riotshop">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/riot_black_dark</item>
    </style>

    <!-- Style for admin text inputs -->
    <style name="AdminTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/riot_gold_accent</item>
        <item name="hintTextColor">@color/riot_gold_accent</item>
        <item name="boxBackgroundColor">@color/input_background</item>
    </style>

    <style name="AdminTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textColorHint">@color/input_text_hint</item>
        <item name="android:background">@color/input_background</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <!-- Style for Vietnamese text input support -->
    <style name="VietnameseEditText">
        <item name="android:importantForAutofill">no</item>
        <item name="android:imeOptions">actionDone</item>
    </style>
</resources>